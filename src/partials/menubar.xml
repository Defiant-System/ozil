<MenuBar>
	<Menu name="Ozil Player">
		<Menu name="About Ozil Player" shell="win -a"/>
		<Menu type="divider"/>
		<Menu name="Settings" for="settings">
			<Menu name="Captions" icon="icon-cc">
				<Menu name="Disabled" click="set-subtitle" check-group="playback-subtitle" arg="none"/>
				<Menu type="divider"/>
				<!-- <Menu name="Swedish" click="set-subtitle" check-group="playback-subtitle" arg="se"/> -->
			</Menu>
			<Menu name="Speed" icon="icon-speed">
				<Menu name="0.5x" click="set-speed" check-group="playback-speed" arg="0.5"/>
				<Menu name="0.75x" click="set-speed" check-group="playback-speed" arg="0.75"/>
				<Menu name="Normal" click="set-speed" check-group="playback-speed" is-checked="1" arg="1"/>
				<Menu name="1.25x" click="set-speed" check-group="playback-speed" arg="1.25"/>
				<Menu name="1.5x" click="set-speed" check-group="playback-speed" arg="1.5"/>
				<Menu name="1.75x" click="set-speed" check-group="playback-speed" arg="1.75"/>
				<Menu name="2x" click="set-speed" check-group="playback-speed" arg="2"/>
				<Menu name="4x" click="set-speed" check-group="playback-speed" arg="4"/>
			</Menu>
			<Menu name="Quality" icon="icon-quality" for="playback-quality">
				<!-- <Menu name="576p" click="set-quailty" check-group="playback-quality" arg="576"/> -->
			</Menu>
			<Menu type="divider"/>
			<Menu name="Picture in Picture" icon="icon-pip" click="toggle-pip"/>
			<Menu name="Enter Fullscreen" icon="icon-expand" click="toggle-fullsceen"/>
		</Menu>
		<Menu name="Volume" for="volume">
			<Menu type="caption" name="Volume:"/>
			<Menu type="slider" min="0" max="100" value="73" change="update-volume"/>
			<Menu name="Toggle Volume" click="toggle-mute"/>
		</Menu>
		<Menu type="divider"/>
		<Menu name="Quit Ozil Player" shell="win -c"/>
	</Menu>
	<Menu name="Help">
		<Menu name="Help" click="open-help"/>
		<Menu type="divider"/>
		<Menu name="License" shell="win -al"/>
	</Menu>

	<Menu for="ctx-controls">
		<Menu name="None" click="set-wp" arg="0"/>
		<Menu type="divider"/>
		<Menu name="Raised By Wolves" click="set-wp" arg="1"/>
		<Menu name="Foundation" click="set-wp" arg="2"/>
		<Menu name="Hobbit" click="set-wp" arg="3"/>
	</Menu>
</MenuBar>